{
  
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // override backend-specific flags
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "composite": false
  }
}